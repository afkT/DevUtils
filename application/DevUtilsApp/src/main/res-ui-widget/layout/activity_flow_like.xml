<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_e9">

        <dev.widget.ui.FlowLikeView
                android:id="@+id/vid_flv"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_200"
                android:layout_gravity="right|bottom"
                android:layout_margin="@dimen/dp_50"
                app:dev_animDuration="2000"
                app:dev_iconHeight="@dimen/dp_30"
                app:dev_iconWidth="@dimen/dp_30">

            <dev.base.widget.BaseImageView
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_gravity="bottom|center"
                    android:background="@mipmap/icon_launcher_round" />
        </dev.widget.ui.FlowLikeView>
    </FrameLayout>
</layout>