<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="afkt.project.features.dev_widget.LineTextViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView style="@style/ViewTheme.NestedScrollView">

        <LinearLayout style="@style/ViewTheme.LinearLayout.Vertical">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/ViewTheme.TextView"
                android:layout_height="@dimen/dp_100"
                android:lineSpacingExtra="@dimen/dp_5"
                android:text="@{viewModel.infoText}" />

            <View
                style="@style/ViewTheme.Divider.Vertical.DP_0_5"
                android:background="@color/gray" />

            <dev.widget.function.LineTextView
                android:id="@+id/vid_tv"
                style="@style/ViewTheme.TextView"
                android:layout_margin="@dimen/dp_15"
                android:lineSpacingExtra="@dimen/dp_5"
                android:onClick="@{viewModel.clickContent}"
                android:text="@{viewModel.contentText}" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>