<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <dev.widget.custom.CustomNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            style="@style/ViewTheme.padding_lr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <dev.base.widget.BaseButton
                android:id="@+id/vid_save_btn"
                style="@style/ViewTheme.Base_Button"
                android:text="保存壁纸" />

            <dev.base.widget.BaseImageView
                android:id="@+id/vid_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:scaleType="fitXY" />
        </LinearLayout>
    </dev.widget.custom.CustomNestedScrollView>
</layout>