<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f7"
    android:orientation="horizontal"
    android:padding="10.0dp">

    <dev.base.widget.BaseImageView
        android:layout_width="30.0dp"
        android:layout_height="30.0dp"
        android:layout_marginRight="10.0dp"
        android:background="@drawable/icon_live_brow_4" />

    <dev.base.widget.BaseTextView
        android:id="@+id/vid_asv_title_tv"
        style="@style/AppTheme.Base_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:gravity="center|left"
        android:maxLines="1"
        android:textColor="@color/color_33"
        android:textSize="@dimen/un_sp_15"
        tools:text="Sticky Title" />
</LinearLayout>