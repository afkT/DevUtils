<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_tran50"
    android:orientation="vertical"
    android:padding="10.0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_white_r10"
        android:orientation="vertical"
        android:padding="10.0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70.0dp"
            android:orientation="horizontal">

            <dev.base.widget.BaseImageView
                android:layout_width="70.0dp"
                android:layout_height="70.0dp"
                android:background="@mipmap/icon_launcher_round"
                android:scaleType="fitXY" />

            <dev.base.widget.BaseTextView
                android:id="@+id/vid_acp_title_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/un_sp_28" />
        </LinearLayout>

        <dev.base.widget.BaseTextView
            android:id="@+id/vid_acp_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dp"
            android:lineSpacingExtra="10px"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/black"
            android:textSize="@dimen/un_sp_20" />
    </LinearLayout>

</LinearLayout>